{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

{{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}
<div class="row">
    <div class="col s12 m6">
        <div class="icon-block">
            <h2 class="center brown-text"><i class="fas fa-hamburger"></i></h2>
            <h5 class="center">Today's menu</h5>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                <li>
                    {{id}}. {{burger_name}}

                    <button class="devour btn-floating btn-large waves-effect waves-light" data-id="{{id}}">
                        EAT!
                    </button>
                </li>

                {{/unless}}
                {{/each}}
            </ul>


        </div>
    </div>

    <div class="col s12 m6">
        <div class="icon-block">
            <h2 class="center brown-text"><i class="fas fa-skull"></i></h2>
            <h5 class="center">You've already devoured these!</h5>
            <ul>
                {{#each burger}}
                {{#if devoured}}
                <li>
                    {{id}}. {{burger_name}}
                </li>

                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>
<div class="row">
    <div class="col s12">
    <h5>What other burgers do you like?</h5>
    <form class="create-form">

        <div class="form-group">
            <label for="burger_name">Burger name:</label>
            <input type="text" id="bn" name="burger_name">
        </div>
        <button class="waves-effect waves-light btn" type="submit">Add to menu</button>
    </form>
    </div>
</div>